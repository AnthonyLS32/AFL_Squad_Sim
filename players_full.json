import json
import random

lines = ['Back', 'Mid', 'Forward', 'Ruck']
players = []

for i in range(1000):
    line = random.choice(lines)
    ovr = random.choices(
        [random.randint(60, 75), random.randint(76, 85), random.randint(86, 98)],
        weights=[60, 30, 10]
    )[0]

    player = {
        "name": f"Player {i+1}",
        "year": random.choice([2020, 2021, 2022, 2023, 2024]),
        "position": line,
        "line": line,
        "goals": round(random.uniform(0.3, 3.0), 1),
        "disposals": round(random.uniform(8, 28), 1),
        "tackles": round(random.uniform(1, 6), 1),
        "ovr": ovr,
        "photo_url": "https://via.placeholder.com/80"
    }
    players.append(player)

with open('players_full.json', 'w') as f:
    json.dump(players, f, indent=2)

print("âœ… players_full.json created with 1000 players!")
